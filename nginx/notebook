upstream notebook {
    server localhost:8888;
}

server {

    server_name notebook.xiaomingtu.com;

    location / {
        proxy_set_header     Host $host;
        proxy_pass           http://notebook;
    }

    location ~ /api/kernels/ {
        proxy_pass           http://notebook;
        proxy_set_header     Host $host;
        proxy_http_version   1.1;
        proxy_set_header     Upgrade "websocket";
        proxy_set_header     Connection "Upgrade";
        proxy_read_timeout   86400;
    }

    location ~ /terminals/ {
        proxy_pass           http://notebook;
        proxy_set_header     Host $host;
        proxy_http_version   1.1;
        proxy_set_header     Upgrade "websocket";
        proxy_set_header     Connection "Upgrade";
        proxy_read_timeout   86400;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/notebook.xiaomingtu.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/notebook.xiaomingtu.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = notebook.xiaomingtu.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;

    server_name notebook.xiaomingtu.com;
    return 404; # managed by Certbot


}